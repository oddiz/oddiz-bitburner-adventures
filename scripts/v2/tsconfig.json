{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2020",
		"rootDir": "src/",
		"baseUrl": "src/",
		"paths": {
			"/typings/*": ["typings/*"],
			"/utils/*": ["utils/*"],
			"/modules/*": ["modules/*"]
		},
		"outDir": "build/",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"strictPropertyInitialization": true
	}
}
