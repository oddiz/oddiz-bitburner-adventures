{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2021",
        "module": "ESNext",
        "rootDir": "src/",
        "baseUrl": "src/",

        "paths": {
            "/typings/*": ["typings/*"],
            "/utils/*": ["utils/*"],
            "/modules/*": ["modules/*"],
            "/payloads/*": ["payloads/*"],
            "/vendor/*": ["vendor/*"],
            "/ui/*": ["ui/*"],
            "/maintainers/*": ["maintainers/*"]
        },

        "outDir": "build/",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },

    "exclude": ["hackLoopMemoryExample.json", "build/**/*"],
    "include": ["src/**/*"]
}
